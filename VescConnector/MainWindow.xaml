<Window x:Class="VescConnector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VescConnector"
        mc:Ignorable="d"
        Title="MainWindow" Height="376.53" Width="624.545">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <ComboBox  Name="PortList" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="193" Height="24" DropDownOpened="PortList_DropDownOpened" />
        <Button Name="ConnectPort"  Content="Connect" HorizontalAlignment="Left" Margin="229,21,0,0" VerticalAlignment="Top" Width="75" Click="ConnectPort_Click"/>
        <Button Name="DisconnectPort" Content="Disconnect" HorizontalAlignment="Left" Margin="324,21,0,0" VerticalAlignment="Top" Width="88" Click="DisconnectPort_Click" Grid.ColumnSpan="2"/>
        <ScrollViewer Margin="10,50,8,74" Grid.ColumnSpan="2">
            <TextBlock Name="Status" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Top"  />
        </ScrollViewer>
        <Button Name="SendDutyButton" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top" Width="75" Click="SendDutyButton_Click" >
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding  StringFormat="{}Set Duty: {0:0.0}">
                        <Binding ElementName="DutySlider" Path="Value" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Button>
        <Button Name="GetVersion" Content="GetVersion" HorizontalAlignment="Left" Margin="104,314,0,0" VerticalAlignment="Top" Width="76" Click="GetVersion_Click" />
        <Slider Name ="DutySlider" Value="{Binding Duty, Mode=TwoWay}" Margin="192,314,62.5,0"/>
    </Grid>
</Window>
